<%- include('header') -%>

<div class="registerForm">
    <form action='/register' method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputFirstName4">Nom</label>
                <input name="name" type="text" class="form-control" id="inputFirstName4" placeholder="Nom">
            </div>
            <div class="form-group col-md-6">
                <label for="inputFirstName4">Prénom</label>
                <input name="Prenom" type="text" class="form-control" id="inputSecondName4" placeholder="Prénom">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input name="email" type="email" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Mot de passe</label>
                <input name="password" type="password" class="form-control" id="inputPassword4"
                    placeholder="Mot de passe">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input name="adresse"type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">Ville</label>
                <input name="ville" type="text" class="form-control" id="inputCity" placeholder="Ville">
            </div>
            <div class="form-group col-md-2">
                <label for="inputCp">Code Postal</label>
                <input name="codePostal" type="text" class="form-control" id="inputCp" placeholder="00000">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">S'enregistrer</button>
    </form>
</div>

<%- include('footer') -%>